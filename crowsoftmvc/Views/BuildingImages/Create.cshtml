@model crowsoftmvc.Models.BuildingImage

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>BuildingImage</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="BuildingImages" asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <p>Upload one file:</p>
                    <input type="file" name="ImagePath"/>
                </div>
            </div>
            <div class="form-group" hidden="hidden">
                <label asp-for="ImagePath" class="control-label" hidden="hidden"></label>
                <input asp-for="ImagePath" class="form-control" hidden="hidden" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>

            <div class="form-group" hidden="hidden">
                <label asp-for="BuildingQuoteIdBuildingQuote" class="control-label" hidden="hidden"></label>
                <input asp-for="BuildingQuoteIdBuildingQuote" class="form-control" hidden="hidden" />
                <span asp-validation-for="BuildingQuoteIdBuildingQuote" class="text-danger" hidden="hidden"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
